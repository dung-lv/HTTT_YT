@{
    Layout = null;

    string token = Request.QueryString["token"];
}
<!DOCTYPE html>
<html manifest="">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=10, user-scalable=yes">
    <title>Môi trường công thương - Lấy lại mật khẩu</title>
    <link rel="Shortcut Icon" type="image/x-icon" href="~/favicon.ico">
    <link href="../resources/css/ResetPassword.css" rel="stylesheet" /> 
    <script src="~/Config.js"></script>
    <script src="~/scripts/jquery-1.8.0.min.js"></script>
    <script src="~/scripts/ResetPassword.js"></script>
</head>
<body>
  <div class="container">
      <div class="row-1"></div>
      <div class="row-2">
          @*@if (string.IsNullOrEmpty(token)) {*@
          <div class="body-reset">
              <div class="header">
                  <p>Lấy lại mật khẩu</p>
              </div>
              <div id="lblerror"></div>
              <div class="body-input">
                  <div class="wrap-control">
                      <label class="lablel">Tên đăng nhập</label>
                      <div class="input-text"><input type="text" id="txtUserName" name="UserName" placeholder="Nhập tên đăng nhập" /></div>
                  </div>
                  <div class="wrap-control">
                      <label class="lablel">Email khôi phục</label>
                      <div class="input-text"><input type="text" id="txtEmail" name="Email" placeholder="Nhập Email khôi phục" /></div>
                  </div>
                  <div class="wrap-control">
                      <label class="lablel">Mã xác nhận</label>
                      <div class="input-text"><img id="capcha" src=""/><a class="btn-refresh icon-refresh" id="btnRefresh" href="javascript:void(0)" ></a></div>
                  </div>
                  <div class="wrap-control">
                      <div class="input-text"><input type="text" id="txtCapcha" name="Capcha" placeholder="Mã xác nhận" /></div>
                  </div>
                  <div id="maskLogin" style="display:none">
                      <img src="~/resources/images/loader.gif" />
                  </div>
              </div>
              <div class="footer-content">
                  <a href="javascript:void(0)" id="btnGetPassword">Lấy lại mật khẩu</a>
              </div>
          </div>
          <div class="body-sendlink" style="display:none">
              <p>Thông tin xác nhận đã được gửi vào email  <span class="cls-email"></span>. Vui lòng kiểm tra email và làm theo hướng dẫn.</p>
          </div>
          @*}
          else
          {
            <div class="body-success">
                <p class="msg">Đang kích hoạt tài khoản...</p>
                <div id="maskSuccess" style="display:none">
                    <img src="~/resources/images/loader.gif" />
                </div>
                <div class="footer-success">
                    <a href="/Account/Logout" id="btnLogin">Đăng nhập ngay</a>
                </div>
            </div>
          }*@
      </div>
      <div class="row-3"></div>
  </div>
</body>
</html>
<script type="text/javascript">
    $(function () {
        myResetPassword.init();
    });
</script>

